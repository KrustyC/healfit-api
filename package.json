{
  "name": "healfit-api",
  "version": "0.1.0",
  "description": "Healfit - API",
  "main": "src/index.ts",
  "private": true,
  "scripts": {
    "dev": "nodemon",
    "build": "tsc -b",
    "start:dev": "ts-node -r tsconfig-paths/register src/index.ts",
    "start": "ts-node -r tsconfig-paths/register --transpile-only src/index.ts",
    "better-start": "node -r ./tsconfig-paths-bootstrap.js dist/index.js",
    "migration:run": "NODE_ENV=production ts-node src/migrations/index.ts",
    "migration:run:dev": "NODE_ENV=development ts-node src/migrations/index.ts",
    "migration:generate": "sh src/migrations/generate.sh",
    "prebuild": "./node_modules/.bin/rimraf dist",
    "postbuild": "cp -r src/apollo/types dist/apollo",
    "test": "NODE_ENV=testing mocha -r ts-node/register -r tsconfig-paths/register src/**/*.spec.ts",
    "test:lint": "tslint --project tsconfig.json --fix  src/**/*.ts -t verbose"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts}": [
      "pretty-quick --staged",
      "./node_modules/tslint/bin/tslint --project tsconfig.json --fix  src/**/*.ts",
      "git add"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/KrustyC/healfit-api"
  },
  "author": "Davide Crestini",
  "license": "ISC",
  "dependencies": {
    "@types/bcrypt-nodejs": "^0.0.30",
    "@types/crypto-random-string": "^1.0.0",
    "@types/glob": "^7.1.1",
    "@types/graphql": "^14.0.7",
    "@types/graphql-resolvers": "^0.2.0",
    "@types/jsonwebtoken": "^8.3.0",
    "@types/morgan": "^1.7.35",
    "@types/request": "^2.48.1",
    "apollo-server": "^2.3.1",
    "apollo-server-core": "^2.3.1",
    "apollo-server-express": "^2.3.1",
    "apollo-tracing": "^0.4.0",
    "bcrypt-nodejs": "^0.0.3",
    "body-parser": "^1.15.0",
    "compression": "^1.7.3",
    "cors": "^2.8.1",
    "crypto-random-string": "^1.0.0",
    "date-fns": "^1.30.1",
    "dotenv": "^6.0.0",
    "express": "^4.13.4",
    "express-jwt": "^5.3.1",
    "glob": "^7.1.4",
    "graphql": "^14.1.1",
    "graphql-resolvers": "^0.3.2",
    "jsonwebtoken": "^8.4.0",
    "lodash": "^4.0.0",
    "merge-graphql-schemas": "^1.5.8",
    "moment": "^2.24.0",
    "mongoose": "5.1.3",
    "request": "^2.88.0",
    "rimraf": "^2.6.2",
    "slugify": "^1.3.4"
  },
  "devDependencies": {
    "@graphql-codegen/typescript-graphql-files-modules": "^1.0.4",
    "@types/chai": "^4.1.7",
    "@types/compression": "^0.0.36",
    "@types/cors": "^2.8.4",
    "@types/dotenv": "^4.0.3",
    "@types/express": "^4.16.0",
    "@types/express-jwt": "^0.0.40",
    "@types/lodash": "^4.14.117",
    "@types/mocha": "^5.2.7",
    "@types/mongoose": "^5.2.19",
    "@types/node": "^10.12.12",
    "babel-cli": "^6.9.0",
    "babel-plugin-syntax-async-functions": "^6.13.0",
    "babel-plugin-transform-regenerator": "^6.24.1",
    "babel-plugin-transform-runtime": "^6.15.0",
    "babel-runtime": "^6.20.0",
    "chai": "^4.2.0",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.0",
    "mocha": "^6.1.4",
    "morgan": "^1.9.1",
    "nodemon": "^1.18.8",
    "prettier": "^1.16.1",
    "pretty-quick": "^1.8.0",
    "ts-node": "^8.2.0",
    "tsconfig-paths": "^3.8.0",
    "tslint": "^5.12.1",
    "tslint-config-prettier": "^1.17.0",
    "tslint-plugin-prettier": "^2.0.1",
    "typescript": "^3.2.4"
  }
}
