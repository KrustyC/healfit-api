{
  "name": "api-boilerplate",
  "version": "0.1.0",
  "description": "NodeJS API Boilerplate with Typescript",
  "main": "src/index.ts",
  "private": "true",
  "scripts": {
    "dev": "NODE_ENV=development nodemon",
    "build": "babel src -s -D -d dist --presets es2015,stage-0,stage-1",
    "prebuild": "./node_modules/.bin/rimraf dist",
    "start": "NODE_ENV=production ts-node dist/index.js",
    "prettier": "prettier --config .prettierrc.js './**/*.js' './**/*.ts' --write",
    "test": "NODE_ENV=testing jest --runInBand --detectOpenHandles"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/davidfloegel/node-typescript.git"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.15.0",
    "cors": "^2.8.1",
    "dotenv": "^6.0.0",
    "express": "^4.13.4",
    "lodash": "^4.0.0",
    "mongoose": "5.1.3",
    "rimraf": "^2.6.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.4",
    "@types/dotenv": "^4.0.3",
    "@types/express": "^4.16.0",
    "@types/lodash": "^4.14.117",
    "@types/mongoose": "^5.2.19",
    "@types/node": "^10.11.7",
    "babel-cli": "^6.9.0",
    "babel-plugin-syntax-async-functions": "^6.13.0",
    "babel-plugin-transform-regenerator": "^6.24.1",
    "babel-plugin-transform-runtime": "^6.15.0",
    "babel-runtime": "^6.20.0",
    "nodemon": "^1.9.2",
    "ts-node": "^7.0.1",
    "tsconfig-paths": "^3.6.0",
    "typescript": "^3.1.3"
  }
}
