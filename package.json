{
  "name": "api-boilerplate",
  "version": "0.1.0",
  "description": "Keep It Fit - API",
  "main": "src/index.ts",
  "private": "true",
  "scripts": {
    "start": "ts-node -r tsconfig-paths/register src/index.ts",
    "dev": "nodemon --signal SIGTERM",
    "build": "tsc -b",
    "prebuild": "./node_modules/.bin/rimraf dist",
    "prettier": "prettier --config .prettierrc.js './**/*.js' './**/*.ts' --write",
    "test": "NODE_ENV=testing jest --runInBand --detectOpenHandles",
    "test:lint": "eslint src/**/*.ts"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts}": [
      "pretty-quick --staged",
      "eslint src/ --fix",
      "git add"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/KrustyC/keep-it-fit-api"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/bcrypt-nodejs": "^0.0.30",
    "@types/jsonwebtoken": "^8.3.0",
    "apollo-server": "^2.2.6",
    "apollo-server-express": "^2.2.6",
    "bcrypt-nodejs": "^0.0.3",
    "body-parser": "^1.15.0",
    "compression": "^1.7.3",
    "cors": "^2.8.1",
    "date-fns": "^1.30.1",
    "dotenv": "^6.0.0",
    "express": "^4.13.4",
    "express-jwt": "^5.3.1",
    "graphql": "^14.0.2",
    "jsonwebtoken": "^8.4.0",
    "lodash": "^4.0.0",
    "mongoose": "5.1.3",
    "request": "^2.88.0",
    "rimraf": "^2.6.2"
  },
  "devDependencies": {
    "@types/compression": "^0.0.36",
    "@types/cors": "^2.8.4",
    "@types/dotenv": "^4.0.3",
    "@types/express": "^4.16.0",
    "@types/express-jwt": "^0.0.40",
    "@types/lodash": "^4.14.117",
    "@types/mongoose": "^5.2.19",
    "@types/morgan": "^1.7.35",
    "@types/node": "^10.12.12",
    "babel-cli": "^6.9.0",
    "babel-plugin-syntax-async-functions": "^6.13.0",
    "babel-plugin-transform-regenerator": "^6.24.1",
    "babel-plugin-transform-runtime": "^6.15.0",
    "babel-runtime": "^6.20.0",
    "husky": "^1.2.0",
    "lint-staged": "^8.1.0",
    "morgan": "^1.9.1",
    "nodemon": "^1.18.8",
    "prettier": "^1.15.3",
    "pretty-quick": "^1.8.0",
    "ts-node": "^7.0.1",
    "tsconfig-paths": "^3.6.0",
    "typescript": "^3.1.3"
  }
}
