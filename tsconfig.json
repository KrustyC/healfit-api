{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2016",
    "strictNullChecks": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "lib": [
      "es2015",
      "es6"
    ],
    "sourceMap": true,
    "outDir": "dist",
    "allowJs": false,
    "checkJs": false,
    "noImplicitAny": true,
    "noUnusedParameters": true,
    "baseUrl": ".",
    "paths": {
      "config": [
        "src/config/index.ts"
      ],
      "types/*": [
        "src/types/*"
      ],
      "context/*": [
        "src/context/*"
      ],
      "helpers/*": [
        "src/helpers/*"
      ],
      "lib/*": [
        "src/lib/*"
      ]
    }
  },
  "include": [
    "./src/**/*"
  ]
}